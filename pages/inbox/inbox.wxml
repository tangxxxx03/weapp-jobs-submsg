<view class="container">
  <block wx:if="{{info}}">
    <view class="card">
      <view class="title">投递详情</view>
      <view class="sub">职位：{{info.jobTitle}}</view>
      <view class="sub">姓名：{{info.name}}　电话：{{info.phone}}</view>
      <view class="sub">邮箱：{{info.email||'—'}}</view>
      <view class="sub">时间：{{info.time}}</view>
      <view class="sub" wx:if="{{info.portfolioLink}}">作品集链接：{{info.portfolioLink}}</view>
    </view>

    <view class="card">
      <view class="title" style="font-size:30rpx">下载附件</view>
      <button class="btn-primary" bindtap="downloadResume">下载简历</button>
      <view style="height:12rpx"></view>
      <button class="btn-ghost" wx:if="{{info.hasPortfolio}}" bindtap="downloadPortfolio">下载作品集</button>
    </view>
  </block>
  <block wx:else>
    <view class="card"><view class="sub">记录不存在或已过期</view></view>
  </block>
</view>
