<view class="container">
  <view class="row" style="justify-content:flex-end;margin-bottom:16rpx">
    <button class="btn-ghost btn-mini" bindtap="openAdmin">管理员入口</button>
  </view>

  <view class="title">职位列表</view>
  <block wx:if="{{jobs.length>0}}">
    <block wx:for="{{jobs}}" wx:key="id">
      <view class="card" bindtap="goDetail" data-id="{{item.id}}">
        <view class="title">{{item.title}}</view>
        <view class="sub">{{item.city||'—'}} · {{item.salary||'—'}}</view>
        <view class="sub">更新于 {{item.updatedAt}}</view>
      </view>
    </block>
  </block>
  <block wx:else>
    <view class="card"><view class="sub">暂无职位，请在管理员入口发布。</view></view>
  </block>
</view>
