<view wx:if="{{job}}" class="container">
  <view class="card">
    <view class="title">{{job.title}}</view>
    <view class="sub">城市：{{job.city||'—'}}</view>
    <view class="sub">薪资：{{job.salary||'—'}}</view>
    <view class="label" style="margin-top:12rpx">职位描述</view>
    <view class="sub">{{job.desc||'（无）'}}</view>
  </view>

  <view class="card">
    <view class="title" style="margin-bottom:8rpx">联系发布者</view>
    <view class="row" style="justify-content:space-between">
      <view style="flex:1">
        <view class="label">发布者微信号</view>
        <view class="sub">{{job.wechatId||'未填写'}}</view>
      </view>
      <button class="btn-ghost" bindtap="copyWechat" wx:if="{{job.wechatId}}">复制微信号</button>
    </view>
    <view wx:if="{{job.qrUrl}}" style="margin-top:16rpx">
      <view class="label">微信二维码（长按识别）</view>
      <image src="{{job.qrUrl}}" mode="widthFix" style="width:360rpx;border-radius:12rpx" show-menu-by-longpress="true"></image>
    </view>
    <view wx:else class="sub">未配置二维码，已提供微信号复制。</view>
  </view>

  <view class="card">
    <view class="title" style="margin-bottom:8rpx">我的基本信息</view>
    <view class="label">姓名</view>
    <input class="input" placeholder="张三" value="{{form.name}}" data-k="name" bindinput="onInput"/>
    <view class="label">性别</view>
    <input class="input" placeholder="男/女/其他" value="{{form.gender}}" data-k="gender" bindinput="onInput"/>
    <view class="label">年龄</view>
    <input class="input" type="number" placeholder="25" value="{{form.age}}" data-k="age" bindinput="onInput"/>
    <view class="label">手机号</view>
    <input class="input" type="number" placeholder="11位手机号" value="{{form.phone}}" data-k="phone" bindinput="onInput"/>
    <view class="label">邮箱（可选）</view>
    <input class="input" placeholder="name@example.com" value="{{form.email}}" data-k="email" bindinput="onInput"/>
    <view class="label">自我介绍/备注（可选）</view>
    <textarea class="input" placeholder="简单介绍自己、到岗时间等" value="{{form.note}}" data-k="note" bindinput="onInput" maxlength="-1"></textarea>
    <view class="row" style="margin-top:16rpx">
      <button class="btn-primary" bindtap="copyCard">复制自荐卡片</button>
      <button class="btn-ghost" style="margin-left:12rpx" bindtap="saveLocal">保存到本机</button>
    </view>
    <view class="sub" style="margin-top:8rpx">复制后请在微信添加发布者并粘贴发送。</view>
  </view>
</view>
<view wx:else class="empty">加载中或职位不存在</view>
