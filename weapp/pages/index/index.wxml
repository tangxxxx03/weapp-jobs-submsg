<view class="container">
  <view class="title">职位列表</view>
  <block wx:if="{{jobs.length>0}}">
    <block wx:for="{{jobs}}" wx:key="id">
      <view class="card" bindtap="goDetail" data-id="{{item.id}}">
        <view class="row" style="justify-content:space-between;align-items:flex-start">
          <view style="flex:1">
            <view style="font-size:32rpx;font-weight:600">{{item.title}}</view>
            <view class="sub">{{item.city||'—'}} · {{item.salary||'—'}}</view>
            <view class="sub">更新于 {{item.updatedAt}}</view>
          </view>
          <view wx:if="{{item.requirePortfolio}}" class="tag">需作品集</view>
        </view>
      </view>
    </block>
  </block>
  <block wx:else>
    <view class="card"><view class="sub">暂无职位。</view></view>
  </block>

  <view class="footer-spacer"></view>
  <view class="footer">
    <button class="btn-primary footer-btn" bindtap="openAdmin">管理员入口</button>
  </view>
</view>
