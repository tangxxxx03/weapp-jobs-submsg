page { background:#f6f7fb; }
.container { padding:24rpx; }
.title { font-size:36rpx; font-weight:700; margin:12rpx 0; }
.sub { color:#666; font-size:26rpx; }
.label { margin-top:16rpx; margin-bottom:8rpx; color:#333; }
.input { background:#f7f8fa; border-radius:12rpx; padding:16rpx; font-size:28rpx; }
.card { background:#fff; border-radius:16rpx; padding:24rpx; margin:16rpx 0; box-shadow:0 4rpx 16rpx rgba(0,0,0,.04); }
.row { display:flex; align-items:center; }
.btn-primary { background:#1677ff; color:#fff; border-radius:12rpx; padding:0 24rpx; }
.btn-ghost { background:#fff; color:#1677ff; border:1rpx solid #1677ff; border-radius:12rpx; padding:0 24rpx; }
.empty { color:#999; padding:48rpx; text-align:center; }
.footer { position:fixed; left:0; right:0; bottom:0; background:#fff; padding:16rpx 24rpx calc(16rpx + env(safe-area-inset-bottom)); box-shadow:0 -6rpx 24rpx rgba(0,0,0,.06); z-index:999; }
.footer-spacer { height:140rpx; }
.footer-btn { width:100%; height:88rpx; line-height:88rpx; border-radius:16rpx; font-size:30rpx; }
